@model AppUserPasswordDto
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="ChangePassword" method="post" class="p-3">
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="form-group">
        <label>Eski Şifre</label>
        <span class="text-danger" asp-validation-for="@Model.OldPassword"></span>
        <input type="password" asp-for="@Model.OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label>Yeni Şifre</label>
        <span class="text-danger" asp-validation-for="@Model.Password"></span>
        <input type="password" asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Yeni Şifre (Tekrar)</label>
        <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
        <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>
</form>

