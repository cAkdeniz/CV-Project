@model AppUserUpdateModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Başarılı! </strong> @TempData["message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<h1 class="mt-4">Bilgilerini Güncelle</h1>
<br />
<form asp-action="Index" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Adınız</label>
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        <input asp-for="@Model.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyadınız</label>
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        <input asp-for="@Model.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>E-mail Adresiniz</label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Telefon Numaranız</label>
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        <input asp-for="@Model.PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Adres</label>
        <span asp-validation-for="@Model.Adress" class="text-danger"></span>
        <input asp-for="@Model.Adress" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ön Yazı</label>
        <span asp-validation-for="@Model.ShortDescription" class="text-danger"></span>
        <input asp-for="@Model.ShortDescription" class="form-control" />
    </div>
    <div class="form-group row">
        <div class="col-6">
            <label>Bir Önceki Resminiz</label>
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="~/img/@Model.ImageUrl" alt="@Model.Picture" style="width:5rem!important;height:4rem!important" />
            }
            else
            {
                <div class="alert alert-light text-center">
                    Sistemde herhangi bir resim kayıtlı değil.
                </div>
            }
        </div>
        <div class="col-6">
            <label>Resim Seç</label>
            <input type="file" asp-for="@Model.Picture" class="form-control-file" />
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>
