@model SocialMediaIconAddDto
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Add" asp-controller="SocialMediaIcon" method="post" class="mt-2">
    <div class="form-group mt-2">
        <label>İkon Bilgisi</label>
        <input asp-for="@Model.Icon" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <label>Link Bilgisi</label>
        <input asp-for="@Model.Link" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
</form>

