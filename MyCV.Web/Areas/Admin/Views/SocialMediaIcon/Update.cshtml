@model SocialMediaIconUpdateDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="Update" asp-controller="SocialMediaIcon" method="post" class="mt-2">
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="form-group mt-2">
        <label>İkon Bilgisi</label>
        <input asp-for="@Model.Icon" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <label>Link Bilgisi</label>
        <input asp-for="@Model.Link" class="form-control" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
</form>

