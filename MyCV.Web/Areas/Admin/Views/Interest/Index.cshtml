@model List<InterestListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="text-left my-2">
    <a class="btn btn-info" asp-controller="Interest" asp-action="Add">Yeni Hobi Ekle</a>
</div>

<table class="table table-hover table-striped mt-2">
    <thead>
        <tr>
            <th>Hobi Bilgisi</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-warning btn-sm mr-1" asp-action="Update" asp-controller="Interest" asp-route-id="@item.Id">Düzenle</a>
                    <a onclick="return confirm('Silmek istediğinizden emin misiniz?')"
                       class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Interest"
                       asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

