@model List<EducationListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="text-left my-2">
    <a class="btn btn-info" asp-controller="Education" asp-action="Add">Yeni Eğitim Ekle</a>
</div>

<table class="table table-hover table-striped mt-2">
    <thead>
        <tr>
            <th>Kurum Adı</th>
            <th>Bölüm</th>
            <th>Puan</th>
            <th>Başlangıç Yılı</th>
            <th>Bitiş Yılı</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Point / @item.MaxPoint</td>
            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
            <td>
                <a class="btn btn-warning btn-sm mr-1" asp-action="Update" asp-controller="Education" asp-route-id="@item.Id">Düzenle</a>
                <a onclick="return confirm('Silmek istediğinizden emin misiniz?')"
                   class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Education"
                   asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
        }
    </tbody>
</table>