@model ProjectUpdateDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Başarılı! </strong> @TempData["message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Index" asp-controller="Project" method="post" class="mt-2 text-center">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group my-2">
        <strong>Referans Projeler</strong>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
        <textarea asp-for="@Model.Description" class="form-control"></textarea>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
</form>

